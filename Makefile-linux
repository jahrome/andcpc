CAP32_VERSION=1.1.0

TARGET = cap32
SDL_CONFIG = sdl-config
OBJS = gp2x_psp.o \
cap32.o \
crtc.o \
fdc.o \
psg.o \
video.o \
z80.o \
psp_main.o \
psp_sdl.o \
psp_kbd.o \
psp_joy.o \
kbd.o \
psp_font.o \
psp_menu.o \
psp_run.o \
psp_menu_disk.o \
psp_danzeff.o \
psp_menu_set.o \
psp_menu_help.o \
psp_menu_joy.o \
psp_menu_kbd.o \
psp_menu_cheat.o \
psp_menu_list.o \
psp_editor.o \
miniunz.o \
unzip.o \
cpccat.c \
psp_fmgr.o

DEFAULT_CFLAGS = $(shell $(SDL_CONFIG) --cflags)

MORE_CFLAGS = -I/usr/include  -I. \
-DNO_STDIO_REDIRECT -DCAP32_VERSION=\"$(CAP32_VERSION)\" \
-DLINUX_MODE 

CFLAGS = $(DEFAULT_CFLAGS) $(MORE_CFLAGS) -fsigned-char -g 

LIBS += -L/usr/lib -L/usr/X11R6/lib -lSDL_image -lSDL -lXext -lX11 -lpng -ljpeg -lz -lm -lpthread 

all: $(TARGET)

$(TARGET): $(OBJS)
	gcc $(CFLAGS) $(OBJS) $(LIBS) -o $(TARGET)

clean:
	rm -f $(OBJS) $(TARGET)

ctags: 
	ctags *[ch]
